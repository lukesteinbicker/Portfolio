---
import Layout from "@/layouts/Layout.astro";
import Nav from "@/components/nav.astro";
---

<Layout title="404 - Page Not Found">
  <Nav />
  <section class="text-[var(--white)] min-h-screen flex items-center justify-center">
    <div class="max-w-5xl mx-auto text-center space-y-8 px-6">
      <div class="space-y-4">
        <h1 class="text-8xl md:text-9xl font-bold text-[var(--white-icon)] opacity-20">404</h1>
        <h2 class="text-4xl md:text-5xl font-medium">Page Not Found</h2>
        <p class="text-lg md:text-xl text-[var(--white-icon)] max-w-2xl mx-auto">
          The page you're looking for doesn't exist or has been moved. 
          Let's get you back on track.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row justify-center items-center">
        <a
          href="/"
          class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] px-8 py-4 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)] text-lg font-medium"
        >
          Go Home
        </a>
      </div>
      
      <div class="pt-8">
        <p class="text-sm text-[var(--white-icon)] opacity-60">
          If you think this is an error, please 
          <a 
            href="mailto:lukesteinbicker@gmail.com" 
            class="text-[var(--white-icon)] hover:text-white transition-colors underline"
          >
            contact me
          </a>
        </p>
      </div>
    </div>
  </section>
</Layout>
